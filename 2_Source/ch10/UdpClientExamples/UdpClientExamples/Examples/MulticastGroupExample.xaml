<Window x:Class="UdpClientExamples.Examples.MulticastGroupExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="多播示例" Height="260" Width="350">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Name="textBlockTip" Margin="0 0 0 10"/>
        <GroupBox Grid.Row="1" Header="接收的信息">
            <TextBlock Name="textBlockReceiveTip"/>
        </GroupBox>
        <DockPanel Grid.Row="2" Margin="10 5 10 5">
            <Label Content="发送：" Margin="5 0 0 0"/>
            <Button Name="btnSend" DockPanel.Dock="Right" Content="确定" Padding="10 0 10 0" HorizontalAlignment="Right" Margin="10 0 0 0" Click="btnSend_Click"/>
            <TextBox Name="textBoxSend" Text="同志们辛苦了！" />
        </DockPanel>
    </Grid>
</Window>
