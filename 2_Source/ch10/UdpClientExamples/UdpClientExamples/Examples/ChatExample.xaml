<Window x:Class="UdpClientExamples.Examples.ChatExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="单播示例" Height="300" Width="350">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Margin="10 5 10 5">
            <Label Content="发送信息：" Margin="10 0 0 0"/>
            <Button Name="btnSend" DockPanel.Dock="Right" Content="发送" Padding="10 0 10 0" HorizontalAlignment="Right" Margin="10 0 0 0" Click="btnSend_Click"/>
            <TextBox Name="textBoxSend" Text="你好！" />
        </DockPanel>
        <Border BorderBrush="Black" BorderThickness="1" Margin="5">
            <TextBlock Name="textBlock1" TextWrapping="WrapWithOverflow"/>
        </Border>
    </DockPanel>
</Window>
