<Window x:Class="ChatServer.ThreadServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="服务端-用多线程实现" Height="200" Width="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5 0 5 10">
            <Button Name="btnStart" Content="开始监听" Padding="10 0 10 0" Click="btnStart_Click"/>
            <Button Name="btnStop" Content="停止监听" Padding="10 0 10 0" Margin="20 0 0 0" Click="btnStop_Click"/>
        </StackPanel>
        <Border DockPanel.Dock="Top" Margin="10" BorderBrush="Black" BorderThickness="1">
            <ScrollViewer>
                <TextBlock Name="textBlock1"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</Window>
