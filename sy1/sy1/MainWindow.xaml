<Window x:Class="sy1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sy1"
        mc:Ignorable="d"
        Title="舒洪凡——MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Background="LightBlue">
            <TextBox x:Name="textBox1" TextWrapping="Wrap" Text="TextBox" Height="50" Margin="4" Background="LightCoral"/>
            <TextBox x:Name="textBox2" TextWrapping="Wrap" Text="TextBox" Height="50" Margin="4" Background="AliceBlue"/>
            <StackPanel Height="100" Orientation="Horizontal">
                <TextBox  Width="200" Height="50" Margin="5" Background="LightGreen"/>
                <TextBox  Width="200" Height="50" Margin="5" Background="LightPink"/>
            </StackPanel>
            <Button x:Name="button" Margin="5" Width="200" Height="100" Click="btn_click">
                <Image x:Name="image" Height="100" Width="100" Source="Resources/shf.png"/>
            </Button>

        </StackPanel>

    </Grid>
</Window>
